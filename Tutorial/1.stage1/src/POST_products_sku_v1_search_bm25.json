
{
  "size": 200,
  "track_total_hits": false,
  "_source": ["skuid","spuid","brand_name","group_name","product_name","price","sales","color","size","season","scene"],
  "query": {
    "bool": {
      "filter": [
        { "terms": { "season": ["冬季"] } },
        { "terms": { "people_gender": ["女"] } },
        { "range": { "price": { "lte": 1500 } } }
      ],
      "must": [
        {
          "multi_match": {
            "query": "通勤 小黑裙",
            "fields": [
              "product_name^4",
              "brand_name^2",
              "group_name^2",
              "marketing_attributes^1.5",
              "product_description",
              "search_text^2"
            ],
            "type": "best_fields"
          }
        }
      ]
    }
  }
}
